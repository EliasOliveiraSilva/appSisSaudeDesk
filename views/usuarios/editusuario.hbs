    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Formulário de edição de usuário</h3>

<div class="card">
    <div class="card-body">
        <form action="" method="post">
                <input type="hidden" name="id" value="{{usuarios_id}}"
            <label for="nome">Nome: </label>
                <input type="text" name="nome" class="form-control" value="{{usuarios.nome}}" required>

            <label for="rg">RG: </label>
                <input type="text" name="rg" class="form-control" value="{{usuarios.rg}}">

            <label for="cpf">CPF: </label>
                <input type="text" name="cpf" class="form-control" value="{{usuarios.cpf}}">

            <label for="susNumero">Numero do SUS: </label>
                <input type="text" name="susNumero" class="form-control" value="{{usuarios.susNumero}}">

            <label for="email">E-mail: </label>
                <input type="email" name="email" class="form-control" value="{{usuarios.email}}">

            <label for="perfil"> Escolha o perfil</label>
                <select name="perfil" id="perfil" class="form-control">
                    <option value="usuario">Usuário</option>
                    <option value="acompanhante">Acompanhante</option>
                    <option value="agente">Agente</option>
                    <option value="supervisor">Supervisor</option>
                </select>

            <label for="admin"> Definir como Admin</label>
                <select name="eAdmin" id="eAdmin" class="form-control">
                    <option value="0" selected="selected">Não</option>
                    <option value="1">Sim</option>
                </select>

            <button type="submit" class="btn btn-success mt-4">Editar usuário</button>
        </form>
    </div>
</div>
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Formulário de cadastro de novo usuário</h3>
<div class="card">
    <div class="card-body">
        <form action="" method="post">
            <label for="nome">Nome: </label>
                <input type="text" name="nome" class="form-control" required>

            <label for="rg">RG: </label>
                <input type="number" name="rg" class="form-control">

            <label for="cpf">CPF: </label>
                <input type="number" name="cpf" class="form-control">

            <label for="susNumero">Numero do SUS: </label>
                <input type="number" name="susNumero" class="form-control">

            <label for="email">E-mail: </label>
                <input type="email" name="email" class="form-control">

            <label for="senha">Senha: </label>
                <input type="password" name="senha" class="form-control" required>

            <label for="senha2">Repita sua senha: </label>
                <input type="password" name="senha2" class="form-control" required>

            <button type="submit" class="btn btn-success mt-4">Criar conta</button>
        </form>
    </div>
</div>
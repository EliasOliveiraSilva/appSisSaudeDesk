<h2>Lista de Medicamentos</h2>
<hr/>
<a href="/admin/medicamentos/add"><button class="btn btn-success">Adicionar novo medicamento</button></a>
<hr/>
{{#each medicamentos}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{nomeGenerico}}</small>
            <br/>
            <a href="/admin/medicamentos/edit/{{_id}}"><button class="btn btn-success mt-2">Editar Medicamento</button></a>
            <form action="/admin/medicamentos/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}" />
                <button class="btn btn-danger mt-2">Excluir medicamento</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhum medicamento registrado</h4>
{{/each}}
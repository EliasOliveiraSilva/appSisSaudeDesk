{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Novo medicamento</h3>

<div class="card">
    <div class="card-body">
        <form action="/admin/medicamentos/novo" method="post">
            <label for="nome">Nome: </label>
            <input type="text" id="nome" name="nome" placeholder="Nome do medicamento" class="form-control" />

            <label for="nomeGenerico">Nome Generico: </label>
            <input type="text" id="nomeGenerico" name="nomeGenerico" placeholder="Nome generico do medicamento"
                class="form-control" />
            <br/>
            <button class="btn btn-success" type="submit">Cadastrar</button>
        </form>
    </div>
</div>